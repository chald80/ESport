@page
@using ESport.Model
@model ESport.Pages.Profiles.AddGameModel
@{
    ViewData["Title"] = "Create";
}

<h1>Add A Game </h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="  ModelOnly  " class="text-danger">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Game.GameId" class="control-label"></label>
                <input asp-for="@Model.Game.GameId" class="form-control" />
                <span asp-validation-for="@Model.Game.GameId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label hidden="hidden" asp-for="@Model.Game.GameName" class="control-label"></label>
                <input asp-for="@Model.Game.GameName" class="form-control" />
                <span asp-validation-for="@Model.Game.GameName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Game.ProfileId" class="control-label"></label>
                <input asp-for="@Model.Game.ProfileId" class="form-control" />
                <span asp-validation-for="@Model.Game.ProfileId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>