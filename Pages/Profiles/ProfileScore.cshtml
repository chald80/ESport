@page
@model ESport.Pages.Profiles.ProfileScoreModel
@{
    ViewData["Title"] = "Student_Enrollments";
}

<h3 style ="color:red">Score</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Profile.ProfileName) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.Profile.ProfileName) </dd>

        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Profile.Games) </dt>
               
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Game Name</th>
                    <th>Game Id</th>
                </tr>
                @foreach (var item in Model.Profile.Games)
                {
                    <tr>
                        <td> @Html.DisplayFor(modelItem => item.GameName)</td>
                        <td>  @Html.DisplayFor(modelItem => item.GameId)</td>
                    </tr>
                }
            </table>
            <p>
                <a asp-page="./Index">Back to List</a>
            </p>
        </dd>
    </dl>
</div>
